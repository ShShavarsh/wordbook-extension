{
    "manifest_version": 3,
    "name": "Wordbook",
    "version": "0.1",
    "description": "Learn with youtube.",
    "host_permissions": ["https://*.youtube.com/*"],
    "background": {
        "service_worker": "./background.js"
    },
    "permissions": ["activeTab", "storage" , "scripting", "tabs", "tabGroups", "webNavigation"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Wordbook",
        "default_icon": {
          "192": "wordbook-logo.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "all_frames": true,
            "js": ["content-script.js"]
        }
    ],
    "web_accessible_resources": [
      {
        "matches": ["https://*.youtube.com/*"],
        "resources": [ "api-calls.js" ]
      }
    ],
    "icons": {
      "16": "wordbook-logo.png",
      "192": "wordbook-logo.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; default-src 'self'; object-src 'self';",
      "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
    }
  }